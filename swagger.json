          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Sample Product"
          },
          "description": {
            "type": "string",
            "example": "This is a sample product"
          },
          "price": {
            "type": "number",
            "example": 29.99
          },
          "category": {
            "type": "string",
            "example": "Books"
          },
          "isIllegal": {
            "type": "boolean",
            "example": "false"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["Tag1", "Tag2"]
          },
          "images": {
            "type": "array",
            "example": "['http://example.com/image.jpg']"
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Sample Category"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "sampleuser"
          },
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "john.doe@example.com"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        }
      },
      "Register": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "john.doe@example.com"
          },
          "password": {
            "type": "string",
            "example": "password123"
          },
          "firstname": {
            "type": "string",
            "example": "john"
          },
          "lastname": {
            "type": "string",
            "example": "doe"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}
